* {
  padding: 0;
  margin: 0;
}

body {
  font-size: 16px;
  line-height: 1;
  color: #333333;
}

h3 {
    font-weight: bold;
    text-decoration: underline;
    font-size: 120%;
    padding: 8px 6px;
    text-align: center;
}

input {
    margin-left: 10px;
    margin-top: 10px;
}

input.Add {
  padding: 5px 10px;
  font-size: 1.2em;
}

#lists .list {
    padding: 3px 6px;
}

#lists .selected {
  padding: 2px 6px;
  background: #9be;
  font-weight: bold;
}

#rosters .roster {
    padding: 3px 6px;
}

#rosters .selected {
    padding: 2px 6px;
    background: #9be;
    font-weight: bold;
}

#rosters .roster-name {
    cursor: pointer;
    color: black;
    text-decoration: none;
}

.rosterplayer {
  display: block;
  height: 50px;
  position: relative;
  overflow: hidden;
  border-top: 1px solid #ccc;
  border-top-width: 1px;
  border-top-style: solid;
  border-top-color: rgb(204, 204, 204);
}

.rosterplayer .destroy {
  cursor: pointer;
  position: absolute;
  left: 5px;
  top: 15px;
  height: 20px;
  width: 20px;
}

#roster-list .rosterplayer .display, #roster-list .rosterplayer .edit {
  margin-left: 30px;
  height: 100%;
  width: auto;
  float: left;
  padding-top: 18px;
  line-height: 1;
}

#roster-list .done .roster-text {
    text-decoration: line-through;
    color: #999;
}

#roster-list .rosterplayer:hover .destroy {
  background: url('/destroy.png') no-repeat 0 0;
}

#roster-list .rosterplayer .destroy:hover {
  background-position: 0 -20px;
}

#roster-list .rosterplayer .player-text {
  float: left;
  margin-left: 10px;
  font-size: 100%;
}




.list {
  display: block;
  height: 50px;
  position: relative;
  overflow: hidden;
  border-top: 1px solid #ccc;
  border-top-width: 1px;
  border-top-style: solid;
  border-top-color: rgb(204, 204, 204);
}

.destroy_team {
  cursor: pointer;
  position: absolute;
  left: 5px;
  top: 15px;
  height: 20px;
  width: 20px;
}

#team-list .display_team {
  margin-left: 30px;
  height: 100%;
  width: auto;
  float: left;
  padding-top: 18px;
  line-height: 1;
}

#team-list:hover .destroy_team {
  background: url('/destroy.png') no-repeat 0 0;
}

#team-list .destroy_team:hover {
  background-position: 0 -20px;
}

#team-list .list-name {
  float: left;
  margin-left: 10px;
  font-size: 100%;
}





.playerA.selected {
    background-color: yellow;
}

.playerB.selected {
    background-color: yellow;
}

.rosterviewA.dblclicked {
    background-color: yellow;
}

.rosterviewB.dblclicked{
    background-color: yellow;
}

.teamAdblclicked {
    background-color: yellow;
}

.teamBdblclicked {
    background-color: yellow;
}

.mask {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    background-color: #000000;
    opacity: .4;
    z-index: 1;
}


body #ongamemodal {
	width: 800px;
	height: 800px;
	margin: -370px 0 0 -400px;
}